                      const submitButton = form.querySelector('button[type="submit"]');
                      const originalButtonText = submitButton.textContent;

                      // Bloqueia o botão para evitar cliques duplos
                      submitButton.disabled = true;
                      submitButton.innerHTML = `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Enviando...`;

                      try {
                         const formData = new FormData(form);
                         // Garante o token de segurança
                         const token = formData.get('__RequestVerificationToken');

                         const response = await fetch(form.action, {
                            method: 'POST',
                            body: formData,
                            headers: {
                               'RequestVerificationToken': token
                            }
                         });

                         const result = await response.json();

                         if (result.success) {
                            // 1. Fecha o modal
                            if (doacaoModal) doacaoModal.hide();

                            // 2. Exibe a mensagem de sucesso
                            alert(result.message);


                            window.location.reload();
                         } else {
                            alert('Erro: ' + result.message);
                         }
                      } catch (error) {
                         console.error('Erro no fetch:', error);
                         alert('Ocorreu um erro de rede. Tente novamente.');
                      } finally {
                         // Restaura o botão caso tenha dado erro (se der sucesso, a página vai recarregar antes disso)
                         submitButton.disabled = false;
                         submitButton.textContent = originalButtonText;
                      }
                   });
                }
             });
    </script>
}