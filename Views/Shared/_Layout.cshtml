<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nexum</title>
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/nexumApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fonts/Poppins-Bold.ttf" asp-append-version="true" />
    <link rel="stylesheet" href="~/fonts/Poppins-ExtraBold.ttf" asp-append-version="true" />
    <link rel="stylesheet" href="~/fonts/Poppins-Medium.ttf" asp-append-version="true" />
    <link rel="stylesheet" href="~/fonts/Poppins-Regular.ttf" asp-append-version="true" />
    <link rel="stylesheet" href="~/fonts/Poppins-Thin.ttf" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-color:#2987BF;">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Logo.png" alt="Nexum" height="40" class="me-2" />
                    <span class="fw-bold text-white">NEXUM</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex align-items-center w-100">

                    <!--BARRA DE PESQUISA NO MEIO-->
                    <form class="search-wrapper mx-auto"
                          method="get"
                          asp-area=""
                          asp-controller="Home"
                          asp-action="Index">

                        <input type="text"
                               class="search-input"
                               name="search"
                               placeholder="Buscar ONGs, vagas, metas..."
                               value="@Context.Request.Query["search"]" />
                        <button type="submit" class="search-btn">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                    <!--MENU À DIREITA-->
                    <ul class="navbar-nav ms-sm-auto me-0">
                        <li class="nav-item">
                        
                            @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                            {
                                <a class="nav-link"
                                   asp-area="Admin"
                                   asp-controller="Dashboard"
                                   asp-action="Index">
                                    Home
                                </a>
                            }
                            else
                            {
                                <a class="nav-link"
                                   asp-area=""
                                   asp-controller="Home"
                                   asp-action="SmartRedirect">
                                    Home
                                </a>
                            }

                        </li>
              
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="sobreNosMenu"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Sobre nós
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="sobreNosMenu">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="QuemSomos" asp-area="">Quem somos</a></li>
                                <li><a class="dropdown-item" asp-controller="FaleConosco" asp-action="Index" asp-area="">Fale conosco</a></li>
                            </ul>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item">
                                <a class="nav-link fw-bold text-primary"
                                   asp-controller="Home"
                                   asp-action="Index"
                                   asp-area="">
                                    <i class="bi bi-shop"></i> Marketplace
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ongs" asp-action="Index" asp-area="">ONGs cadastradas</a>
                        </li>
                    </ul>

                    <!--LOGIN TAMBÉM À DIREITA-->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Nexum - <a asp-area="" asp-controller="Home" asp-action="QuemSomos">Sobre</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @if (TempData["ListaPendencias"] != null)
    {
        var listaErros = TempData["ListaPendencias"].ToString().Split('|');

        <div class="modal fade" id="modalPendencias" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true" style="z-index: 9999;">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg" style="border-radius: 12px;">

                    <div class="modal-header modal-nexum-header py-3">
                        <h5 class="modal-title fw-bold d-flex align-items-center">
                            <i class="bi bi-info-circle-fill me-2"></i> Ação Necessária
                        </h5>
                    </div>

                    <div class="modal-body p-4">
                        <p class="mb-4 text-secondary" style="font-size: 0.95rem;">
                            Para liberar o acesso completo ao sistema <strong>Nexum</strong>, precisamos que você finalize o seu cadastro:
                        </p>

                        <ul class="list-group list-group-flush gap-2">
                            @foreach (var erro in listaErros)
                            {
                                <li class="list-group-item nexum-error-item d-flex align-items-center p-3">
                                    <i class="bi bi-x-circle-fill text-danger me-3 fs-5"></i>
                                    @erro
                                </li>
                            }
                        </ul>

                        <div class="alert nexum-info-box mt-4 mb-0 d-flex align-items-start p-3">
                            <i class="bi bi-pencil-fill me-2 mt-1"></i>
                            <small>
                                Você foi redirecionado para o seu perfil. Utilize os ícones de edição para corrigir os itens acima e liberar seu acesso.
                            </small>
                        </div>
                    </div>

                    <div class="modal-footer border-0 bg-white justify-content-center pb-4">
                        <button type="button" class="btn btn-nexum-action fw-bold shadow-sm" data-bs-dismiss="modal">
                            Entendi, vou corrigir
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var modalElement = document.getElementById('modalPendencias');
                if (modalElement) {
                    var modal = new bootstrap.Modal(modalElement);
                    modal.show();
                }
            });
        </script>
    }
    <script>
        // Função reutilizável pra qualquer campo de senha
        function toggleSenha(inputId, element) {
            const senha = document.getElementById(inputId);
            const btn = element;

            if (!senha || !btn) return;

            if (senha.type === "password") {
                senha.type = "text";
                btn.textContent = "Ocultar";
            } else {
                senha.type = "password";
                btn.textContent = "Mostrar";
            }
        }
    </script>
</body>
</html>
 