@model FaleConoscoModel

<form id="replyForm"
      asp-area="Admin"
      asp-controller="FaleConosco"
      asp-action="Reply"
      method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="id" value="@Model.Id" />

    <p><strong>De:</strong> @Model.Nome &lt;@Model.Email&gt;</p>
    <p><strong>Assunto:</strong> @Model.Assunto</p>
    <p><strong>Mensagem:</strong> @Model.Mensagem</p>

    <div class="mb-3">
        <label class="form-label">Sua resposta (e-mail):</label>
        <textarea name="resposta" class="form-control" rows="6"></textarea>
        @Html.ValidationMessage("Resposta", new { @class = "text-danger" })
    </div>
</form>
