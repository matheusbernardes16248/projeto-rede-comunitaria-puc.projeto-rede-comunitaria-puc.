@model nexumApp.Models.Ong

<div class="container-fluid">
    <dl class="row">
        <dt class="col-sm-9">Razão Social</dt>
        <dd class="col-sm-12">@Model.Nome</dd>

        <dt class="col-sm-9">CNPJ</dt>
        <dd class="col-sm-12">
            @string.Format("{0:00\\.000\\.000\\/0000\\-00}", Convert.ToInt64(Model.CNPJ))
        </dd>

        <dt class="col-sm-9">Endereço</dt>
        <dd class="col-sm-12">@Model.Endereço</dd>

        <dt class="col-sm-9">Descrição de atividades</dt>
        <dd class="col-sm-12">@Model.Descriçao</dd>

        <dt class="col-sm-9">Documento de comprovação</dt>
        <dd class="col-sm-12 d-flex gap-2 flex-wrap">

            <a href='@Url.Action("ViewDocumento", "Ongs", new { area = "Admin", id = Model.Id })'
               class="btn btn-outline-primary btn-sm"
               target="_blank" rel="noopener">
               Visualizar PDF
            </a>

            <a href='@Url.Action("DownloadDocumento", "Ongs", new { area = "Admin", id = Model.Id })'
               class="btn btn-outline-primary btn-sm"
               target="_blank" rel="noopener">
                Baixar PDF
            </a>
        </dd>
    </dl>


    <div id="pdfViewerWrap" class="mt-3" style="display:none;">
        <div class="border rounded" style="height:70vh; overflow:hidden;">
            <div id="pdfLoader" class="d-flex align-items-center justify-content-center h-100">
                Carregando PDF...
            </div>
            <iframe id="pdfFrame"
                    title="Documento da ONG"
                    style="display:none; border:0; width:100%; height:100%;"
                    allow="autoplay"
                    loading="lazy"></iframe>
        </div>
    </div>
</div>